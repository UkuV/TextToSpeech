<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.opilane.texttospeech.MainActivity">

    <EditText
        android:id="@+id/kõneks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/räägi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter text that will be read by phone"/>

    <Button
        android:id="@+id/räägi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/puhasta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="TTS"
        android:text="SPEAK " />


    <Button
        android:id="@+id/puhasta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:text="Clear" />

    <TextView
        android:id="@+id/kõneldav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:hint="Your spoken text will apper here" />



    <ImageButton
        android:id="@+id/mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="139dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="103dp"
        app:srcCompat="@drawable/mic"
        android:onClick="TTS"/>

</RelativeLayout>
